<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageTwo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use your fingers to slide the basket so that you are able to catch the fruits before they fall onto the ground. Since food is scarce, try not to drop too many fruits. If you do, you may not have enough food for your whole family."
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_pageThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next" />



    </LinearLayout>



</ScrollView>